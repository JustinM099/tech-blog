<div class="container post-container">
    <div class="card blue-grey">
        <div class="card-content white-text">
            <span class="card-title">{{post.title}}</span>
            <hr>
            <br>
            <p class="center-align">{{post.description}}</p>
            <br>
        </div>
    </div>
</div>

<div class="container">
    <div class="card blue-grey">
        <div class="card-content white-text">
            <form class="edit-form">
                <div>
                    <label for="title">Update Title</label>
                    <input class="input" name="title" type="text" value="{{post.title}}">
                </div>
                <div>
                    <label for="post">Update Your Post</label>
                    <input class="input" name="post" type="text" value="{{post.description}}">
                </div>
                <button type="submit" class="btn" id="edit">update</button>
                <button type="button" class="btn" id="delete-button">delete</button>
            </form>
        </div>
    </div>
</div>

{{> comments post.comments}}

